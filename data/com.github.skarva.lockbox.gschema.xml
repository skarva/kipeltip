<schemalist>
    <enum id="com.github.skarva.lockbox.sort">
        <value value="0" nick="name"/>
        <value value="1" nick="created"/>
    </enum>
    <schema path="/com/github/skarva/lockbox/saved-state/" id="com.github.skarva.lockbox.saved-state" gettext-domain="com.github.skarva.lockbox">
        <key name="maximized" type="b">
            <default>false</default>
            <summary>The maximized state of the main window.</summary>
            <description>The maximized state of the main window.</description>
        </key>
        <key name="window-size" type="(ii)">
            <default>(800,600)</default>
            <summary>Width of the main window.</summary>
            <description>Width of the main window.</description>
        </key>
        <key name="window-position" type="(ii)">
            <default>(-1,-1)</default>
            <summary>Position of the main window.</summary>
            <description>Position of the main window.</description>
        </key>
    </schema>
    <schema path="/com/github/skarva/lockbox/settings/" id="com.github.skarva.lockbox.settings" gettext-domain="com.github.skarva.lockbox">
        <key name="clear-clipboard" type="b">
            <default>true</default>
            <summary>Clear clipboard after timeout.</summary>
            <description>Clear clipboard after timeout.</description>
        </key>
        <key name="clear-clipboard-timeout" type="i">
            <default>10</default>
            <summary>Timeout for clearing clipboard in seconds.</summary>
            <description>Timeout for clearing clipboard in seconds.</description>
        </key>
        <key name="auto-reload" type="b">
            <default>true</default>
            <summary>Auto-reload login list after specified time.</summary>
            <description>Auto-reload login list after specified time.</description>
        </key>
        <key name="auto-reload-timeout" type="i">
            <default>60</default>
            <summary>Time in seconds to wait before auto-reloading.</summary>
            <description>Time in seconds to wait before auto-reloading.</description>
        </key>
        <key name="dark-theme" type="b">
            <default>false</default>
            <summary>Toggle for application dark mode.</summary>
            <description>Toggle for appication dark mode.</description>
        </key>
        <key name="sort-by" enum="com.github.skarva.lockbox.sort">
            <default>'name'</default>
            <summary>An index of the sorting method</summary>
            <description>An index of the sorting method to apply to the collection list</description>
        </key>
        <key name="sort-desc" type="b">
            <default>true</default>
            <summary>Toggle for ascending or descending sort</summary>
            <description>Toggle for ascending or descending sort</description>
        </key>
    </schema>
</schemalist>
